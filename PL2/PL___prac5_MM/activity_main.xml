<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Placement Form"
        android:textSize="35sp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="18sp"
        android:layout_below="@id/name_label"
        android:layout_alignBaseline="@id/email"
        android:layout_marginTop="15dp"
        android:layout_marginStart="12dp"
        />
    <EditText
        android:hint="email"
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/name"
        android:layout_toEndOf="@id/email_label"
        android:layout_marginHorizontal="8dp"
        />
    <TextView
        android:id="@+id/name_label"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_alignBaseline="@id/name"
        android:textSize="18sp"
        android:layout_below="@id/title_label"
        android:layout_marginTop="15dp"
        android:layout_marginStart="12dp"
        />
    <EditText
        android:hint="name"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/title_label"
        android:layout_toEndOf="@id/name_label"
        android:layout_marginHorizontal="8dp"
        />
    <TextView
        android:id="@+id/gpa_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CGPA"
        android:textSize="18sp"
        android:layout_below="@id/gender_label"
        android:layout_marginTop="25dp"
        android:layout_marginStart="12dp"
        />
    <EditText
        android:hint="cgpa"
        android:id="@+id/cgpa"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/gender_label"
        android:layout_toEndOf="@id/gpa_label"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="15dp"
        android:ems="5"
        android:maxLength="4"
        android:inputType="numberDecimal"
        />
    <TextView
        android:id="@+id/dob_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="DOB"
        android:textSize="18sp"
        android:layout_below="@id/branch_label"
        android:layout_marginTop="35dp"
        android:layout_marginStart="12dp"
        />
    <Button
        android:id="@+id/dbPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Date"
        android:layout_below="@id/branch"
        android:layout_toEndOf="@id/dob_label"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        />
    <EditText
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="5"
        android:layout_below="@id/branch"
        android:layout_toEndOf="@id/dbPicker"
        android:layout_alignBaseline="@id/dob_label"
        android:layout_marginStart="35dp"
        android:hint="Age"
        android:editable="false"
        />
    <TextView
        android:id="@+id/gender_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textSize="18sp"
        android:layout_below="@id/email_label"
        android:layout_marginTop="25dp"
        android:layout_marginStart="12dp"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/gender_label"

        android:layout_below="@id/email_label"
        android:layout_marginTop="15dp"
        android:id="@+id/gender_group"
        >
        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            />
        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:layout_marginStart="20dp"
            />

    </RadioGroup>
    <TextView
        android:id="@+id/branch_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Branch"
        android:textSize="18sp"
        android:layout_below="@id/gpa_label"
        android:layout_marginTop="35dp"
        android:layout_marginStart="12dp"
        />
    <Spinner
        android:id="@+id/branch"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_toEndOf="@id/branch_label"
        android:layout_below="@id/gpa_label"
        android:layout_marginTop="35dp"
        android:layout_marginStart="25dp"
        />
    <TextView
        android:id="@+id/tech_stack_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Tech Stack Known"
        android:textSize="18sp"
        android:layout_below="@id/dob_label"
        android:layout_marginTop="35dp"
        android:layout_marginStart="12dp"
        />
    <ListView
        android:id="@+id/tech_stack"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/tech_stack_label"
        android:choiceMode="multipleChoice"
        />
    <TextView
        android:id="@+id/job_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Applying for: "
        android:textSize="18sp"
        android:layout_below="@id/tech_stack"
        android:layout_marginTop="35dp"
        android:layout_marginStart="12dp"
        />
    <CheckBox
        android:id="@+id/dream_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dream"
        android:layout_below="@id/tech_stack"
        android:layout_toEndOf="@id/job_label"
        android:layout_marginTop="24dp"
        />
    <CheckBox
        android:id="@+id/super_dream_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Super Dream"
        android:layout_below="@id/tech_stack"
        android:layout_toEndOf="@id/dream_job"
        android:layout_marginTop="24dp"
        android:layout_marginStart="10dp"
        />

    <CheckBox
        android:id="@+id/regular_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regular"
        android:layout_below="@id/tech_stack"
        android:layout_toEndOf="@id/super_dream_job"
        android:layout_marginTop="24dp"
        android:layout_marginStart="10dp"
        />
    <CheckBox
        android:id="@+id/terms_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/job_label"
        android:text="All info provided by me is correct"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:textSize="18sp"
        />
    <Button
        android:id="@+id/submit_btn"
        android:layout_width="120dp"
        android:layout_below="@id/terms_checkbox"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:enabled="false"
        />
</RelativeLayout>